@model eCommerce_Inefavel.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "CadastrarProduto";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" rel="stylesheet" />
</head>

<body style="background-color: #99B898;">
    <div class="col-md-10 mx-auto py-4">
        <div style="border-color: #99B898" class="card">
            <div style="background-color: #355C7D" class="card-header text-uppercase text-white">
                <h4>Adicionar Novo Produto</h4>
            </div>
            <div style="background-color: white" class="card-body">
                <form enctype="multipart/form-data" asp-action="CadastrarProduto">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Titulo" class="control-label"></label>
                                <input placeholder="Ex: CAMISA NIKE SB MASCULINO" asp-for="Titulo" class="form-control" />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Valor" class="control-label"></label>
                                <input placeholder="Ex: 000,00" asp-for="Valor" class="form-control" />
                                <span asp-validation-for="Valor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ImagePath" class="control-label"></label>
                                <div class="custom-file">
                                    <input type="file"  asp-for="ImagePath" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Escolha o Arquivo</label>
                                </div>
                                <span asp-validation-for="ImagePath" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row checkboxes">
                            <select multiple style="width: 88%; margin-top: 32px;" class="custom-select">
                                <option disabled selected>Selecione...</option>
                                <option value="P">P</option>
                                <option value="M">M</option>
                                <option value="G">G</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" onclick="teste()" value="Cadastrar Produto" class="btn btn-outline-secondary" />
                        <a asp-action="Admin" class="btn btn-outline-danger">Cancelar Cadastro</a>
                    </div>
                </form>
                <div style="display: none" id="teste" class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Parabéns!</strong> Produto Cadastrado!
                </div>

            </div>
        </div>
        <a class="btn btn-outline-light" asp-controller="Admin" asp-action="ListaDeProdutos">Lista dos Produtos</a>
    </div>


    <script src="path/to/jquery.multi-select.js" type="text/javascript"></script>
</body>
@section scripts{
    <script type="text/javascript">
        //Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });

        function teste() {
            document.getElementById("teste").style.display = ""
        }
    </script>
}

<style>
    .custom-file-input ~ .custom-file-label::after {
        content: "Pesquise";
    }

    .checkboxes {
        flex: 1;
        display: flex;
        justify-content: center;
        font-size: 20px;
        font-family: inherit;
    }
</style>