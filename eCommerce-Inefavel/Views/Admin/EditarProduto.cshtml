@model eCommerce_Inefavel.Models.ProdutosModel

@{
    ViewData["Title"] = "EditarProduto";
}
    <body style="background-color: #99B898;">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.css" rel="stylesheet" />

        <div style="background: white" class="row">
            <div id="titulo" class="card-header text-uppercase text-white">
                <h4>Tela de Edição para / <a style="color: #99B898">@Model.Titulo</a> / </h4>
            </div>
            <div class="col-md-4">
                <form asp-action="EditarProduto">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <img src="~/produtos_img/@Model.ImagePath"
                             alt="Produto"
                             width="150" height="150"
                             style="align-self: center;"
                             asp-append-version="true" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Valor" class="control-label"></label>
                        <input asp-for="Valor" class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tamanhos</label>
                        <select multiple class="form-control" id="mySelect" onchange="myFunction()">
                            <option disabled selected>Selecione...</option>
                            <option value=""></option>
                            <option value="P">P</option>
                            <option value="M">M</option>
                            <option value="G">G</option>
                        </select>
                    </div>
                    <div style="margin-top: 25px" class="form-group">
                        <input style="width: 54%" type="submit" value="Salvar Edição" class="btn btn-secondary" />
                        <a style="width: 44%" class="btn btn-danger" href="/Admin/ListaDeProdutos">Cancelar Edição</a>
                    </div>
                    <p id="demo"></p>
                </form>
            </div>
        </div>
    </body>

<script>

    function myFunction() {
        var x = document.getElementById("mySelect").value;
        document.getElementById("demo").innerHTML = "Tamanho: " + x + " selecionado";
    }
</script>

<style>
    #titulo {
        background-color: #355C7D;
        width: 100%;
        text-align: center;
    }
</style>