@model eCommerce_Inefavel.Models.ProdutosModel

@{
    ViewData["Title"] = "EditarProduto";
}
    <head>
        <link href="https://fonts.googleapis.com/css?family=Quicksand:400,700&display=swap" rel="stylesheet">
    </head>

<body style="background-color: #99B898;">
    <div style="background: white; display: block" class="row">
        <div id="titulo" class="card-header text-uppercase text-white">
            <h4>Tela de Edição para o Produto / <a style="color: #99B898">@Model.Titulo</a> / </h4>
        </div>

        <div>
            <hr />
            <div class="div-produto">
                <div class="col-sm-10">
                    <div>
                        <img src="~/produtos_img/@Model.ImagePath"
                             alt="@Model.Titulo"
                             width="350" height="350"
                             style="align-self: center;"
                             asp-append-version="true" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <form style="padding-left: 20px;" asp-action="EditarProduto">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ImagePath" class="control-label"></label>
                        <input type="file" asp-for="ImagePath" class="form-control text-uppercase" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control text-uppercase" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Valor" class="control-label"></label>
                        <input asp-for="Valor" class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div style="padding-left: 20px;" class="form-group custom-checkbox">
                        <input type="checkbox" id="ativarProduto" class="form-check-input" asp-for="Ativo" />

                        <label style="display: none; font-family: 'Quicksand', sans-serif; color: green" id="ativo" class="form-check-label">
                            O Produto está Ativo
                        </label>

                        <label style="display: none; font-family: 'Quicksand', sans-serif; color: tomato" id="inativo" class="form-check-label">
                            O Produto foi Desativado
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar Edição" class="btn btn-secondary" /> |
                        <a class="btn btn-danger" asp-action="ListaDeProdutos">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<style>
    #ativo {
        padding-left: 15px;
        height: 35px;
        padding-top: 4px;
    }

    #inativo {
        padding-left: 15px;
        height: 35px;
        padding-top: 4px;
    }

    #titulo {
        background-color: #355C7D;
        width: 100%;
        text-align: center;
    }

    .div-produto {
        position: absolute;
        margin-left: 29%;
    }

    #ativarProduto {
        height: 25px;
        width: 25px;
    }
</style>

@{
    if (Model.Ativo == true)
    {
        <script>
            var ativo = document.getElementById("ativo");
            var inativo = document.getElementById("inativo");

            ativo.style.display = "block"
            inativo.style.display = "none"
        </script>

    }
    else
    {
        <script>
            ativo.style.display = "none"
            inativo.style.display = "block"
        </script>
    }
}

<script>
    $('#ativarProduto').click(function () {
        $("#ativo").toggle(this.checked);
        $("#inativo").toggle(this.unchecked);
    });
</script>